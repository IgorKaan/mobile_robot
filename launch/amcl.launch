<launch>
    <include file="$(find mobile_robot_comms)/launch/robot_base.launch" />

    <node name="map_server" pkg="map_server" type="map_server" args="$(find mobile_robot_comms)/maps/test_map.pgm 0.05" />

    <include file="$(find amcl)/examples/amcl_diff.launch" />

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find mobile_robot_comms)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find mobile_robot_comms)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find mobile_robot_comms)/param/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find mobile_robot_comms)/param/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find mobile_robot_comms)/param/dwa_local_planner_params.yaml" command="load" />
    </node>
</launch>
